pipeline {
	agent any
	stages {
		stage('Clean stage'){
			steps {
				sh 'mvn clean'
			}
		}

		stage('Compile stage'){
			steps {
				sh 'mvn compile'
			}
		}

		stage('Test Compile stage'){
			steps {
				sh 'mvn test-compile'
			}
		}

		stage('Test stage'){
			steps {
				sh 'mvn test'
			}
		}

		stage('Install stage'){
			steps {
				sh 'mvn install'
			}
		}

		stage('Run stage'){
			steps {
			sh 'chmod 777 .'
			sh 'chmod 777 target'
			sh 'ls target -l'
			sh 'chmod 777 target/project-1.0-SNAPSHOT.jar'
			sh 'ls target/ -l'
			sh "jar -xf target/project-1.0-SNAPSHOT.jar"
		sh "echo 'Manifest-Version: 1.0\nMain-Class: App\n' > META-INF/MANIFEST.MF"
		sh 'cat META-INF/MANIFEST.MF'
	sh 'ls -l'
sh 'jar -cfm erlyn.jar META-INF/MANIFEST.MF App.class'
			}
		}
	}
}
